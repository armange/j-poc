<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="people_table" author="diego-costa" labels="0.0.1">
        <createTable tableName="people">
            <column name="id" type="numeric">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_people"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
